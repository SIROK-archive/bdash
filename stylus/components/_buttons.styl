/*------------------------------------*\
    #FILL
\*------------------------------------*/
/**
 * @Example
 * <button class="btn -fill" type="button">Fill Button</button>
 * <a class="btn -fill" href="#" role="button">Fill Button</a>
 */
.btn.-fill
  background color-grey
  border 1px solid color-grey
  color #fff
  &:hover
    opacity .7





/*------------------------------------*\
    #STYLE
\*------------------------------------*/
/**
 * @Example
 * <button class="btn -soft" type="button">Soft Button</button>
 * <a class="btn -soft" href="#" role="button">Soft Button</a>
 */
.btn.-soft
  border-radius 200px


/**
 * @Example
 * <button class="btn -hard" type="button">Hard Button</button>
 * <a class="btn -hard" href="#" role="button">Hard Button</a>
 */
.btn.-hard
  border-radius 0



