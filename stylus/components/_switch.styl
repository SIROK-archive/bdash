/**
 * Switch like iOS
 *
 * @Example
 * <div class="switch__container">
 *   <input class="switch -ios" id='cb' type='checkbox'>
 *   <label class="switch-btn" for='cb'></label>
 * </div>
 *
 * Thanks to http://codepen.io/mallendeo/pen/eLIiG
 */
.switch.-ios + .switch-btn
 border-radius 2em


.switch.-ios + .switch-btn:after
 border-radius 2em


.switch.-ios + .switch-btn:active
 box-shadow inset 0 0 0 2em #e8eae9


.switch.-ios + .switch-btn:active:after
 padding-right .8em


.switch.-ios:checked + .switch-btn
 background #86d993


.switch.-ios:checked + .switch-btn:active
 box-shadow none


.switch.-ios:checked + .switch-btn:active:after
 margin-left -.8em
